@article{coleman2016,
author = {Coleman, Karen J. and Stewart, Christine and Waitzfelder, Beth E. and Zeber, John E. and Morales, Leo S. and Ahmed, Ameena T. and Ahmedani, Brian K. and Beck, Arne and Copeland, Laurel A. and Cummings, Janet R. and Hunkeler, Enid M. and Lindberg, Nangel M. and Lynch, Frances and Lu, Christine Y. and Owen-Smith, Ashli A. and Trinacty, Connie Mah and Whitebird, Robin R. and Simon, Gregory E.},
